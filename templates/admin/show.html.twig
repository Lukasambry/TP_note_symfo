{% extends 'base.html.twig' %}

{% block title %}User: {{ user.firstname }} {{ user.lastname }}{% endblock %}

{% block body %}
    <div class="min-h-screen flex items-center justify-center bg-gray-50 py-12 px-4 sm:px-6 lg:px-8">
        <div class="max-w-3xl w-full bg-white p-8 rounded-lg shadow-lg">
            <h1 class="text-3xl font-bold text-gray-900 mb-6">User Details</h1>
            <table class="w-full border border-gray-200 rounded-lg mb-6">
                <tbody>
                <tr class="border-b">
                    <th class="text-left p-4 bg-gray-100">Id</th>
                    <td class="p-4">{{ user.id }}</td>
                </tr>
                <tr class="border-b">
                    <th class="text-left p-4 bg-gray-100">Email</th>
                    <td class="p-4">{{ user.email }}</td>
                </tr>
                <tr class="border-b">
                    <th class="text-left p-4 bg-gray-100">Roles</th>
                    <td class="p-4">{{ user.roles ? user.roles|json_encode : '' }}</td>
                </tr>
                <tr class="border-b">
                    <th class="text-left p-4 bg-gray-100">Is Verified</th>
                    <td class="p-4">{{ user.isVerified ? 'Yes' : 'No' }}</td>
                </tr>
                <tr class="border-b">
                    <th class="text-left p-4 bg-gray-100">Firstname</th>
                    <td class="p-4">{{ user.firstname }}</td>
                </tr>
                <tr>
                    <th class="text-left p-4 bg-gray-100">Lastname</th>
                    <td class="p-4">{{ user.lastname }}</td>
                </tr>
                </tbody>
            </table>
            <div class="flex justify-between">
                <a href="{{ path('app_admin_index') }}" class="text-blue-500 hover:underline">Back to List</a>
                <a href="{{ path('app_admin_edit', {'id': user.id}) }}" class="text-orange-500 hover:underline">Edit</a>
            </div>
            <div class="mt-6">
                {{ include('admin/_delete_form.html.twig') }}
            </div>
        </div>
    </div>
{% endblock %}
