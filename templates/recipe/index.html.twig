{% extends 'base.html.twig' %}

{% block title %}Recipe Index{% endblock %}

{% block body %}
    <div class="min-h-screen flex items-center justify-center bg-gray-50 py-12 px-4 sm:px-6 lg:px-8">
        <div class="max-w-5xl w-full bg-white p-8 rounded-lg shadow-lg">
            <h1 class="text-3xl font-bold text-gray-900 mb-6">Recipe Index</h1>
            <table class="w-full border border-gray-200 rounded-lg">
                <thead class="bg-gray-100">
                <tr>
                    <th class="text-left p-4">Id</th>
                    <th class="text-left p-4">Name</th>
                    <th class="text-left p-4">Description</th>
                    <th class="text-left p-4">Preparation Time</th>
                    <th class="text-left p-4">Difficulty</th>
                    <th class="text-left p-4">Created At</th>
                    <th class="text-left p-4">Actions</th>
                </tr>
                </thead>
                <tbody>
                {% for recipe in recipes %}
                    <tr class="border-b">
                        <td class="p-4">{{ recipe.id }}</td>
                        <td class="p-4">{{ recipe.name }}</td>
                        <td class="p-4">{{ recipe.description }}</td>
                        <td class="p-4">{{ recipe.preparationTime }}</td>
                        <td class="p-4">{{ recipe.difficulty }}</td>
                        <td class="p-4">{{ recipe.createdAt ? recipe.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                        <td class="p-4">
                            <a href="{{ path('app_recipe_show', {'id': recipe.id}) }}" class="text-blue-500 hover:underline">Show</a>
                            <a href="{{ path('app_recipe_edit', {'id': recipe.id}) }}" class="text-orange-500 hover:underline">Edit</a>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="7" class="p-4 text-center text-gray-500">No records found</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>

            <div class="mt-6 text-right">
                <a href="{{ path('app_recipe_new') }}" class="bg-orange-500 text-white px-4 py-2 rounded-lg hover:bg-orange-600">Create New</a>
            </div>
        </div>
    </div>
{% endblock %}
