{# templates/recipe/pdf.html.twig #}
<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>{{ recipe.name }}</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            line-height: 1.6;
            color: #333;
        }
        .recipe-header {
            text-align: center;
            margin-bottom: 30px;
        }
        .recipe-title {
            font-size: 24px;
            color: #e65100;
            margin-bottom: 10px;
        }
        .recipe-meta {
            color: #666;
            font-size: 14px;
            margin-bottom: 20px;
        }
        .section-title {
            font-size: 18px;
            color: #2c3e50;
            margin-top: 20px;
            margin-bottom: 10px;
            border-bottom: 2px solid #e65100;
            padding-bottom: 5px;
        }
        .ingredients-list {
            margin-bottom: 20px;
        }
        .ingredients-list li {
            margin-bottom: 5px;
        }
        .steps-list {
            margin-bottom: 20px;
        }
        .steps-list li {
            margin-bottom: 10px;
        }
        .difficulty {
            color: #666;
            font-style: italic;
        }
    </style>
</head>
<body>
<div class="recipe-header">
    <h1 class="recipe-title">{{ recipe.name }}</h1>
    <div class="recipe-meta">
        <p>Temps de préparation : {{ recipe.preparationTime }} minutes</p>
        <p class="difficulty">Difficulté : {{ recipe.difficulty }}</p>
    </div>
</div>

<div class="recipe-content">
    {% if recipe.description %}
        <div class="section">
            <h2 class="section-title">Description</h2>
            <p>{{ recipe.description }}</p>
        </div>
    {% endif %}

    <div class="section">
        <h2 class="section-title">Ingrédients</h2>
        <ul class="ingredients-list">
            {% for ingredient in recipe.ingredients %}
                <li>{{ ingredient.quality }} {{ ingredient.unit }} - {{ ingredient.name }}</li>
            {% endfor %}
        </ul>
    </div>

    <div class="section">
        <h2 class="section-title">Étapes de préparation</h2>
        <ol class="steps-list">
            {% for step in recipe.steps %}
                <li>{{ step.description }}</li>
            {% endfor %}
        </ol>
    </div>
</div>
</body>
</html>