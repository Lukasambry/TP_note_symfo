{% extends 'base.html.twig' %}

{% block title %}Recette : {{ recipe.name }}{% endblock %}

{% block body %}
    <div class="min-h-screen flex flex-col items-center bg-gray-50 py-12 px-4 sm:px-6 lg:px-8">
        <div class="max-w-3xl w-full bg-white p-8 rounded-lg shadow-lg">
            <h1 class="text-3xl font-bold text-gray-900 mb-6">{{ recipe.name }}</h1>
            <p class="text-lg text-gray-700 mb-4">{{ recipe.description }}</p>
            <p class="text-sm text-gray-500 mb-2">
                <strong>Temps de préparation :</strong> {{ recipe.preparationTime }} min
            </p>
            <p class="text-sm text-gray-500 mb-2">
                <strong>Difficulté :</strong> {{ recipe.difficulty }}
            </p>
            <p class="text-sm text-gray-500 mb-6">
                <strong>Créé le :</strong> {{ recipe.createdAt|date('d/m/Y H:i') }}
            </p>

            <!-- Ingredients Section -->
            <section class="mt-8">
                <h2 class="text-2xl font-semibold mb-4">Ingrédients</h2>
                <ul class="list-disc list-inside space-y-2">
                    {% for ingredient in recipe.ingredients %}
                        <li class="bg-gray-100 p-2 rounded-lg">{{ ingredient.name }}</li>
                    {% else %}
                        <p class="text-gray-500">Aucun ingrédient ajouté pour cette recette.</p>
                    {% endfor %}
                </ul>
            </section>

            <!-- Steps Section -->
            <section class="mt-8">
                <h2 class="text-2xl font-semibold mb-4">Étapes à suivre</h2>
                <ol class="list-decimal list-inside space-y-2">
                    {% for step in steps %}
                        <li class="bg-gray-100 p-4 rounded-lg">{{ step.description }}</li>
                    {% else %}
                        <p class="text-gray-500">Aucune étape définie pour cette recette.</p>
                    {% endfor %}
                </ol>
            </section>
            <a href="{{ path('app_recipe_pdf', {'id': recipe.id}) }}"
               class="inline-flex items-center px-4 py-2 bg-red-600 hover:bg-red-700 text-white font-bold rounded-lg">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 21h10a2 2 0 002-2V9.414a1 1 0 00-.293-.707l-5.414-5.414A1 1 0 0012.586 3H7a2 2 0 00-2 2v14a2 2 0 002 2z" />
                </svg>
                Télécharger en PDF
            </a>
            <a href="{{ path('app_recipe_csv', {'id': recipe.id}) }}"
               class="inline-flex items-center px-4 py-2 bg-green-600 hover:bg-green-700 text-white font-bold rounded-lg">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 10v6m0 0l-3-3m3 3l3-3m2 8H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
                </svg>
                Télécharger en CSV
            </a>
        </div>
    </div>
{% endblock %}
