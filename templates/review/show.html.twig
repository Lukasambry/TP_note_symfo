{% extends 'base.html.twig' %}

{% block title %}Review{% endblock %}

{% block body %}
    <div class="min-h-screen flex items-center justify-center bg-gray-50 py-12 px-4 sm:px-6 lg:px-8">
        <div class="max-w-2xl w-full bg-white p-8 rounded-lg shadow-lg">
            <h1 class="text-2xl font-bold text-gray-900 mb-6">Review Details</h1>
            <table class="w-full border border-gray-200 rounded-lg mb-6">
                <tbody>
                <tr class="border-b">
                    <th class="text-left p-4 bg-gray-100">Id</th>
                    <td class="p-4">{{ review.id }}</td>
                </tr>
                <tr class="border-b">
                    <th class="text-left p-4 bg-gray-100">Rating</th>
                    <td class="p-4">{{ review.rating }}</td>
                </tr>
                <tr class="border-b">
                    <th class="text-left p-4 bg-gray-100">Comment</th>
                    <td class="p-4">{{ review.comment }}</td>
                </tr>
                <tr class="border-b">
                    <th class="text-left p-4 bg-gray-100">Created At</th>
                    <td class="p-4">{{ review.createdAt ? review.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                </tr>
                <tr>
                    <th class="text-left p-4 bg-gray-100">Recipe</th>
                    <td class="p-4">
                        <a href="{{ path('app_recipe_show', {'id': review.recipe.id}) }}" class="text-orange-500 hover:underline">
                            {{ review.recipe.name }}
                        </a>
                    </td>
                </tr>
                </tbody>
            </table>

            <div class="flex justify-between">
                <a href="{{ path('app_review_index') }}" class="text-blue-500 hover:underline">Back to List</a>
                <a href="{{ path('app_review_edit', {'id': review.id}) }}" class="text-orange-500 hover:underline">Edit</a>
            </div>

            <div class="mt-6">
                {{ include('review/_delete_form.html.twig') }}
            </div>
        </div>
    </div>
{% endblock %}
